# Daily-Challenge
dc's of skillrack
#include<stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    scanf("%d",&n);
    int a[n];
    for(int i=0;i<n;i++)
        scanf("%d",&a[i]);
    int ct=0,i,j;
    for(i=0;i<n;i++)
    {
        j=i+1;
        if(a[j]==a[i]+1)
            ct++;
    }
    
    printf("%d",ct);


}

input 
5
23 45 46 78 79 100
output
2
